<%- include('../partials/header') %>
    <h3><%= skill.skill %></h3>
    <h3>Complete: <%= skill.done ? 'Yes' : 'No' %></h3>

    <form action="/skills/<%= skill.id %>/edit?_method=GET" class="edit-form" method="POST">
        <button type="submit">Edit Skill</button>
    </form>

    <form action="/skills/skill?_method=DELETE" class="delete-form" method="POST">
        <button type="submit">Delete Skill</button>
    </form>

<%- include('../partials/footer') %>